{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "declarationDir": "dist/types", // 确保在 dist 目录内
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true // 启用 tslib 导入
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.stories.tsx", "**/*.test.tsx"]
}
