{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "npmClient": "pnpm",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "version": "independent",
  "packages": ["packages/*", "apps/*"],
  "ignoreChanges": ["**/node_modules/**", "**/__snapshots__/**"],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "[skip ci] chore: release"
    }
  }
}
